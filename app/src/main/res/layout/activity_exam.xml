<?xml version="1.0" encoding="utf-8"?>
<!-- 定义基础的LinearLayout布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:layout_centerHorizontal="true">

    <include
        android:id="@+id/layout_titlebar"
        layout="@layout/layout_title_bar"/>
    <RelativeLayout
        android:id="@+id/rl_layout1"
        android:layout_below="@id/layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_parctice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:text="顺序练习"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随机练习"
            android:textColor="@color/grey"
            android:drawableTop="@mipmap/icon_random"
            android:layout_toStartOf="@id/btn_parctice"
            android:layout_marginEnd="10dp"
            android:background="#0000"
            />
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专项集训"
            android:textColor="@color/grey"
            android:drawableTop="@mipmap/icon_special"
            android:layout_toEndOf="@id/btn_parctice"
            android:layout_marginStart="10dp"
            android:background="#0000"
            />
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="难题攻克"
            android:textColor="@color/grey"
            android:drawableTop="@mipmap/icon_problem"
            android:layout_toStartOf="@id/btn_parctice"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="100dp"
            android:background="#0000"
            />
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未做先行"
            android:textColor="@color/grey"
            android:drawableTop="@mipmap/icon_undo"
            android:layout_toEndOf="@id/btn_parctice"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:background="#0000"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rl_layout1"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btn_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape2"
            android:text="模拟考试"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:onClick="toExamSimulation"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考前冲刺"
            android:textColor="@color/grey"
            android:drawableTop="@mipmap/icon_exam"
            android:layout_toStartOf="@id/btn_exam"
            android:layout_marginEnd="10dp"
            android:background="#0000"
            />
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成绩排行"
            android:textColor="@color/grey"
            android:drawableTop="@mipmap/icon_rank"
            android:layout_toEndOf="@id/btn_exam"
            android:layout_marginStart="10dp"
            android:background="#0000"
            />
        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="错题记录"
            android:textColor="@color/grey"
            android:drawableTop="@mipmap/icon_record"
            android:layout_toStartOf="@id/btn_exam"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="100dp"
            android:background="#0000"
            />
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textColor="@color/grey"
            android:drawableTop="@mipmap/icon_favorite"
            android:layout_toEndOf="@id/btn_exam"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:background="#0000"
            />
    </RelativeLayout>

</RelativeLayout>
